<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:core="clr-namespace:GC.Core"
             xmlns:order="clr-namespace:GC.Models.Order"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="800"
             x:Class="GC.Controls.MenuDay"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="{x:Static core:Styles.StandardPadding}" Spacing="16">
            <!-- Day at top left -->
            <TextBlock Text="{Binding FirstMenuDateString}" FontWeight="Bold" FontSize="20" Foreground="{x:Static core:Styles.TextBrush}"/>
            <!-- Menus list -->
            <ItemsControl ItemsSource="{Binding Menus}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="order:Menu">
                        <Border Background="{x:Static core:Styles.AccentBrush}"
                                CornerRadius="{x:Static core:Styles.StandardCornerRadius}"
                                Padding="{x:Static core:Styles.StandardPadding}"
                                Margin="0,0,0,8">
                            <StackPanel>
                                <!-- Title at top -->
                                <TextBlock Text="{Binding Title}" Foreground="{x:Static core:Styles.TextBrush}" FontSize="18" FontWeight="Bold" Margin="0,0,0,4"/>
                                <!-- Spacer to push bottom content down -->
                                <StackPanel Height="8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <!-- Allergens bottom left -->
                                    <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,8,0,0" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                        <ItemsControl ItemsSource="{Binding Allergens}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="x:Char">
                                                    <Border Background="{x:Static core:Styles.SecondaryTextBrush}" CornerRadius="4" Padding="4,2" Margin="0,0,4,0">
                                                        <TextBlock Text="{Binding}" Foreground="White" FontSize="12"/>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                    <!-- Price bottom right -->
                                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" Foreground="{x:Static core:Styles.TextBrush}" FontWeight="Bold" FontSize="16"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
