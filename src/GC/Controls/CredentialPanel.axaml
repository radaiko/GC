<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:GC.Core"
             xmlns:controls="clr-namespace:GC.Controls"
             x:Class="GC.Controls.CredentialPanel">
    <StackPanel>
        <!-- Small header like iOS settings -->
        <TextBlock Text="{Binding Header, RelativeSource={RelativeSource AncestorType=controls:CredentialPanel}}"
                   Foreground="{x:Static core:Styles.SecondaryTextBrush}"
                   FontSize="12"
                   Margin="0,6,0,0" />
        <!-- Credential input fields -->
        <Border Margin="{x:Static core:Styles.CompactPadding }"
                CornerRadius="12" Background="{x:Static core:Styles.AccentBrush}" >
            <StackPanel>
                <TextBox Text="{Binding Username, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=controls:CredentialPanel}}"
                         Watermark="{Binding UsernameWatermark, RelativeSource={RelativeSource AncestorType=controls:CredentialPanel}}" Background="Transparent"
                         BorderBrush="Transparent"
                         Foreground="{x:Static core:Styles.TextBrush}" />
                <Separator />
                <TextBox Text="{Binding Password, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=controls:CredentialPanel}}" PasswordChar="â—"
                         Watermark="{Binding PasswordWatermark, RelativeSource={RelativeSource AncestorType=controls:CredentialPanel}}" Background="Transparent"
                         BorderBrush="Transparent"
                         Foreground="{x:Static core:Styles.TextBrush}" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>
